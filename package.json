{
  "name": "reaction-cli",
  "version": "1.0.0",
  "description": "A command line client for creating and managing Open Commerce projects",
  "main": "index.js",
  "bin": {
    "reaction": "index.js"
  },
  "engines": {
    "node": ">=14.18.1"
  },
  "type": "module",
  "scripts": {
    "test": "node --experimental-json-modules --no-warnings node_modules/mocha/bin/_mocha ./tests/*.* --full-trace",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:reactioncommerce/cli.git"
  },
  "author": "hello-open-commerce@mailchimp.com",
  "license": "Apache-2.0",
  "dependencies": {
    "chai": "^4.3.4",
    "chalk": "^5.0.0",
    "command-exists": "^1.2.9",
    "commander": "^8.3.0",
    "concat-stream": "^2.0.0",
    "configstore": "^6.0.0",
    "diehard": "^1.5.2",
    "envalid": "^7.2.2",
    "fs-extra": "^10.0.0",
    "is-ci": "^3.0.1",
    "jest": "^27.4.7",
    "meant": "^2.0.1",
    "node-fetch": "^3.1.1",
    "public-ip": "^5.0.0",
    "rimraf": "^3.0.2",
    "simple-git": "^2.48.0",
    "update-notifier": "^5.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "semantic-release": "^18.0.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "arrowParens": "always"
  },
  "release": {
    "branches": [
      "trunk"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
